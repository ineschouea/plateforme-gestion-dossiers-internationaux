{% block body %}
<style>
#rech{
    margin-left:800px;
}
.nav-link{
    font-size:16px;
}
</style>
  
 <h1> <B>Liste de demandes: </B></h1>
 {% for convention in conventions %}
<convention>
    <B><h4> Demande :
     <div style="text-align:center">
   <a href="/delete/{{ convention.id }}" class="btn btn-danger my-2 my-sm-0" onclick="return confirm('Voulez vous vraiment supprimer la convention?')">Supprimer demande</a>

</div>
     
   </h4>  </B>
       <div class="row">
    <div class="col-sm-9"> 
    <table class="table">
        <tbody>
            <tr>
                <th>Id convention</th>
                <td>{{ convention.getIdConv()}}</td>

            </tr>
            <tr>
                <th>Avis DEVE</th>
                <td>{{ convention.getAvisDeve() }}</td>
            </tr>
             <tr>
                <th>Avis CEVU</th>
                <td>{{ convention.getAvisCevu() }}</td>

            </tr>
            <tr>
                <th>Avis CA</th>
                <td>{{ convention.getAvisCa() }}</td>
            </tr>
           
             <tr>
                <th>Avis DRI</th>
                <td>{{ convention.getAvisDri() }}</td>
            </tr>
          
        </tbody>
    </table>
    <div class="navigation">
            {{ knp_pagination_render(conventions) }}
        </div>
    </div> 
    </div> 

<a href="/edit/{{ convention.id }}" class="btn btn-primary my-2 my-sm-0">Decission</a>
<a href="/pdf/{{ convention.id }}" class="btn btn-secondary my-2 my-sm-0">Imprimer demande</a>
<a href="/conv/{{ convention.id }}" class="btn btn-warning my-2 my-sm-0">Consulter demande</a>
<a href="/recherche" class="btn btn-success">Chercher demande</a>

</div>
</convention>
